{"type":"group","name":"msysscoundrel","enabled":true,"id":1,"items":[{"type":"function","name":"onLoad","enabled":true,"id":2,"code":"if (MSys == undefined || MSys.coreVersion == undefined || MSys.coreVersion < 1.3) {\n    display_notice('Starwraith Scoundrel Combat Implant v1.3 requires MSysCore v1.3 or later','gold');\n    return;\n}\n\n// Scoundrel\nMSys.shortname = 'SSCI'\nMSys.bullets = 0\nMSys.ambush = false\nMSys.useAmbush = get_variable('useAmbush')\nMSys.rapidfire = false\nMSys.useRapidfire = get_variable('useRapidfire')\nMSys.huntingAttack = function() {\n    if (!MSys.systemEnabled) {return}\n    var command = ''\n\n    if (MSys.health / MSys.maxHealth < .8 && MSys.healReady && MSys.useHeal) {\n        send_command('stim')\n        return\n    } else if (MSys.offenseEnabled == false || get_variable('tar') == '') {\n        return\n    } else if (MSys.bullets == 0) {\n        command += 'ied fling ripper at '\n    } else if (MSys.bullets == 1) {\n        command += 'gun crackshot '\n    } else if (!MSys.ambush && MSys.useAmbush && MSys.bullets) {\n        command += 'gun ambush '\n    } else if (!MSys.rapidfire && MSys.useRapidfire) {\n        command += 'gun rapidfire '\n    } else {\n        command += 'gun crackshot '\n    }\n\n    command += get_variable('tar')\n    send_command(command)\n}\n\nMSys.loaded(\"Starwraith Scoundrel Combat Implant v1.3\");\n//send_command('wakeup');","items":[]},{"type":"function","name":"onGMCP","enabled":true,"id":3,"code":"// Place any code here you'd like to run when a GMCP message is received\n// - The GMCP message is received as \"args.gmcp_method\" and \"args.gmcp_args\"\n\nGMCP[args.gmcp_method] = args.gmcp_args\n\n/* ------------------------------------------ CHARACTER STUFF ----------------------------------- */\n\nif (args.gmcp_method == \"Char.Vitals\") {\n    MSys.bullets = args.gmcp_args.bl\n}\n\n/* ----------------------------------- DEFENCES AND BUFFS --------------------------------------- */\n\n//if (args.gmcp_method == 'Char.Defences.Add') {\n    //if (args.gmcp_args.name == 'Oblivion: Conqueror')  {\n    //    SSCI.empyreal = 'Conqueror'\n    //}\n//}","items":[]},{"type":"group","name":"Scoundrel","enabled":true,"id":89,"items":[{"type":"group","name":"Configuration","enabled":true,"id":102,"items":[{"type":"alias","name":"Scoundrel Abilities - hscoundrel","enabled":true,"id":101,"matching":"exact","whole_words":true,"case_sensitive":true,"prefix_suffix":true,"actions":[{"action":"script","script":"var abilities = ''\nabilities += 'Ambush: ' + get_variable('useAmbush') + '\\n'\nabilities += 'Rapidfire: ' + get_variable('useRapidfire') + '\\n'\nabilities += 'Heal: ' + get_variable('useHeal') + '\\n'\nabilities += 'Bullets: ' + MSys.bullets + '\\n'\n\nMSys.log(abilities, 'white')"}],"text":"hscoundrel","items":[]},{"type":"alias","name":"Ambush Toggle - hambush","enabled":true,"id":99,"matching":"exact","whole_words":true,"case_sensitive":true,"prefix_suffix":true,"actions":[{"action":"script","script":"MSys.useAmbush = MSys.toggle('useAmbush', 'Ambush');"}],"text":"hambush","items":[]},{"type":"alias","name":"Rapidfire Toggle - hrapidfire ","enabled":true,"id":100,"matching":"exact","whole_words":true,"case_sensitive":true,"prefix_suffix":true,"actions":[{"action":"script","script":"MSys.useRapidfire = MSys.toggle('useRapidfire', 'Rapid Fire');"}],"text":"hrapidfire","items":[]}],"actions":[]},{"type":"group","name":"Shortcuts","enabled":true,"id":104,"items":[{"type":"alias","name":"Construct Ripper - rip","enabled":true,"id":97,"matching":null,"whole_words":false,"case_sensitive":true,"prefix_suffix":true,"actions":[{"action":"script","script":"send_command('ied construct ripper from ' + args[1])"}],"text":"^rip (.*)","items":[]}],"actions":[]},{"type":"group","name":"Ability Activations","enabled":true,"id":103,"items":[{"type":"trigger","name":"Ambush Used","enabled":true,"id":91,"matching":"regexp","whole_words":true,"case_sensitive":true,"text":"^Without war